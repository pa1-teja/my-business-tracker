<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@android:color/transparent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@android:color/darker_gray"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/left_arrow"
            android:padding="16dp"
            android:scaleType="centerInside"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:rotation="-90"
            android:src="@android:drawable/arrow_up_float"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/right_arrow"
            android:padding="16dp"
            android:scaleType="centerInside"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:rotation="90"
            android:src="@android:drawable/arrow_up_float"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:id="@+id/header_date"
            android:layout_toLeftOf="@+id/right_arrow"
            android:layout_toRightOf="@+id/left_arrow"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/selected_date"
                style="@style/date_rows_txt"
                android:textSize="@dimen/header_1"
                android:layout_gravity="center"
                android:text="12/04/2018"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/linear_sal_cab_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <Spinner
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/header_1"
                android:id="@+id/cab_name_sp"
                style="@style/SpinnerTheme"
                android:layout_marginRight="2dp"
                android:background="@android:color/darker_gray" />
            <Spinner
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/header_1"
                android:id="@+id/sal_cus_ed"
                style="@style/SpinnerTheme"
                android:background="@android:color/darker_gray" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:weightSum="4"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/header_3"
            android:layout_marginRight="4dp"
            android:text="@string/total_blocks"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/header_3"
            android:layout_marginRight="4dp"
            android:gravity="center"
            android:text="@string/total_amount"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/header_3"
            android:layout_marginRight="4dp"
            android:gravity="center"
            android:text="@string/paid_amount"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/header_3"
            android:layout_marginRight="4dp"
            android:gravity="center"
            android:text="@string/due_amount"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:background="@android:color/darker_gray"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/total_blocks"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sales_header_count"
            android:layout_marginRight="4dp"
            android:text="20"/>
        <TextView
            android:id="@+id/total_amount"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sales_header_count"
            android:layout_marginRight="4dp"
            android:gravity="center"
            android:text="80000"/>
        <TextView
            android:id="@+id/total_paid"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sales_header_count"
            android:layout_marginRight="4dp"
            android:gravity="center"
            android:text="75000"/>
        <TextView
            android:id="@+id/total_due"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sales_header_count"
            android:layout_marginRight="4dp"
            android:gravity="center"
            android:text="5000"/>
    </LinearLayout>
</LinearLayout>
